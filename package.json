{
  "name": "happy-helpers",
  "private": false,
  "version": "1.1.1",
  "description": "Some helpful javascript functions",
  "main": "lib/main.js",
  "license": "MIT",
  "author": "Don Denton",
  "scripts": {
    "lint": "eslint src/main.js",
    "posttest": "npm run lint",
    "release:major": "npm version major && git push --follow-tags",
    "release:minor": "npm version minor && git push --follow-tags",
    "release:patch": "npm version patch && git push --follow-tags",
    "start": "npm run test",
    "test": "jest --watch",
    "pubtest": "jest",
    "build": "babel -s inline -d lib --ignore *.spec.js src",
    "prepublish": "npm run pubtest && npm run build"
  },
  "repository": "https://github.com/happycollision/happy-helpers",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "keywords": [],
  "jest": {
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    },
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "@types/node": "^9.6.4",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-transform-es2015-modules-umd": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "eslint": "^3.16.0",
    "jest": "^22.4.3",
    "ts-jest": "^22.4.2",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
  }
}
